<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="colorSpinnerElement" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textColor">#010209</item>
    </style>

    <style name="ApplicationStyle" parent="android:Theme">
        <item name="android:buttonStyle">@style/buttonStyle</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/boton_redondeado</item>
    </style>

</resources>